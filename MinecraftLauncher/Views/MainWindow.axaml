<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MinecraftLauncherLem.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="MinecraftLauncherLem.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="MinecraftLauncherLem"
		Width="1200"
		Height="600"
		MinWidth="1200"
		MinHeight="750"
		CanResize="True"
		WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
				   BackgroundSource="Digger"
				   TintColor="#202020"
				   TintOpacity="1"
				   MaterialOpacity="0.65" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>
	
	<DockPanel>


		<Panel Margin="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" >

			<Button HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center" 
					Click="PlayButton_Click" 
					Content="PLAY"
					FontWeight="Bold"
					Foreground="#fff"
					FontSize="35"
					Width="300" 
					Height="100" 
					Background="#a697be"
					CornerRadius="50">
			</Button>
		</Panel>

		<Panel Margin="30" HorizontalAlignment="Right" VerticalAlignment="Top" DockPanel.Dock="Right">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<Button 
					Name="RegistrationButton" 
					Click="RegistrationButton_Click"
					Grid.Column="0" 
					Content="Registration" 
					Foreground="#fff"
					Padding="30,15,30,15" 
					CornerRadius="50"
					Margin="10,0,10,0"
					Background="#a697be"/>
				<Button 
					Name="LoginButton" 
					Click="LoginButton_Click"
					Foreground="#fff"
					Grid.Column="1"
					Content="Login"
					CornerRadius="50"
					Padding="30,15,30,15" 
					Margin="10,0,10,0"
					Background="#a697be" 
					/>
			</Grid >
			
		</Panel>
	
		<Panel Margin="30" DockPanel.Dock="Left" VerticalAlignment="Top" >
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="60"/>
					<RowDefinition Height="60"/>
					<RowDefinition Height="60"/>
				</Grid.RowDefinitions>
				<Button 
					Name="Profile" 
					Click="ProfileButton_Click" 
					Grid.Row="0" 
					CornerRadius="50" 
					Width="50" 
					Height="50" 
					Margin="0 10 0 200"
					Background="#c9a3f6"></Button>
				<Button 
					Grid.Row="1" 
					CornerRadius="50" 
					Width="50" 
					Height="50" 
					Background="#a087cb">
				</Button>
				<Button 
					Grid.Row="2" 
					CornerRadius="50" 
					Width="50" 
					Height="50" 
					Background="#8374ab"></Button>
				<Button 
					Grid.Row="3" 
					CornerRadius="50"
					Width="50" 
					Height="50" 
					Background="#685f8e"></Button>
			</Grid>
		</Panel>


			
	</DockPanel>
	</Panel>
</Window>
